# Database
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Security - JWT Secret Key (REQUIRED! Generate with: openssl rand -base64 64)
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_BASE64_KEY_AT_LEAST_64_CHARACTERS

# CORS - Production domain(s), comma-separated
CORS_ALLOWED_ORIGINS=https://accounting.yourdomain.com

# Frontend API URL (relative path for Caddy proxy)
VITE_API_URL=/graphql

# Azure Form Recognizer (optional)
AZURE_FORM_RECOGNIZER_ENDPOINT=
AZURE_FORM_RECOGNIZER_KEY=

# Salt Edge Open Banking (optional)
SALTEDGE_APP_ID=
SALTEDGE_SECRET=
SALTEDGE_CALLBACK_URL=https://yourdomain.com/api/saltedge/webhook
SALTEDGE_RETURN_URL=https://yourdomain.com/banks/callback
